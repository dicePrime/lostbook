{% extends '::default/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/tiksluscarousel.css') }}" />

{% endblock %}
{% block location %}
    <li><a href="{{ path('_lostbook_homepage') }}" class="rTCBlackText">Acceuil</a></li>
    <li class="active">{{ annonce.titre }}</li>
    {% endblock %}

{% block rightMenu %}

    {{ include('::commonsFiles/rightMenu.html.twig') }}
    
{% endblock %}

{% block section %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="rTCBlackText">{{ annonce.titre }}</h1>
        </div>
    </div>
     <div class="row">
         <div class="col-xs-12 col-sm-6">
            <p>
        <span>Publiée il y'a  {{ annonce.dateCreation | time_ago_in_words(false,true) | trans }}        
            {% if  annonce.utilisateur.nom is defined %}
                {#{{ annonce.utilisateur.nom }}#}
            {% else %}
            AnonymousUser
            {% endif %}
        </span><br/>
        
        TAGS: <a href="#">{{ annonce.motsCles }}</a>
        
    </p>
         </div>
            <div class="col-xs-12 col-sm-6">
                
            </div>
    
    
    <br/> 
    </div>
     <div class="row">
     <div class="col-xs-12  col-sm-7" id="pgwSlideshow">
     
            <ul>
                    {% for document in annonce.medias %}
                        {% set location = ['uploads/documents/annonces/',document.path ] | join %}
                        <li><img class="media-object img-thumbnail img-responsive" src="{{ asset(location | imagine_filter('my_thumb')) }}" width='400'/></li>
                    {% endfor %}
            </ul>
    
    </div>
     </div>
     
            <div class="row" style="padding-top:25px;">
                <div class="col-xs-12 col-sm-9">
                    <h2>Commentaire</h2>
                    <blockquote>
                        {{ annonce.commentaire }}
                    </blockquote>
                </div>
            </div>
    
    <div class="row" style="padding-top:50px;">
    <div class="col-xs-12 col-sm-12">
     <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#infos" aria-controls="infos" role="tab" data-toggle="tab">Informations</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="infos">
          
      </div>
    <div role="tabpanel" class="tab-pane" id="commentaires">Commentaires</div>
    <div role="tabpanel" class="tab-pane" id="messages">Sécurité</div>
    <div role="tabpanel" class="tab-pane" id="parametres">Paramètres</div>
  </div>
    </div>
</div>
{% endblock %}



{% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/tiksluscarousel.js') }}"></script>
        <script>
        $(document).ready(function() {
        $('#pgwSlideshow').tiksluscarousel({
                height :0,
                nav : 'thumbnails',
                autoPlay: false

        });
        });
        </script>
{% endblock %}
