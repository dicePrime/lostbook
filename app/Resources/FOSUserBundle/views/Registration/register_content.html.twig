{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal well fos_user_registration_register'}}) }}
        
    <div class="form-group">
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.username"|trans }}
        </label>
        <div class="col-xs-12 col-sm-4">
            {{ form_widget(form.username,{'attr':{'class':'form-control'} }) }}
        </div>
        <div class="col-xs-12 col-sm-5">
            <span style="color:red">{{ form_errors(form.username) }}</span>
        </div>
    </div>
    <div class="form-group">               
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.email"|trans }}
        </label>
        <div class="col-xs-12 col-sm-4">
            {{ form_widget(form.email,{'attr':{'class':'form-control'} })}}
        </div>
         <div class="col-xs-12 col-sm-5">
            <span style="color:red">{{ form_errors(form.email) }}</span>
        </div>

    </div>

    <div class="form-group">                
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.password"|trans }}
        </label>

        <div class="col-xs-12 col-sm-4">
            {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'} }) }}
        </div>
         <div class="col-xs-12 col-sm-5">
            <span  class="control-label" style="color:red">{{ form_errors(form.plainPassword.first) }}</span>
        </div>
    </div>
    <div class="form-group">                
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.password_confirmation"|trans }}
        </label>

        <div class="col-xs-12 col-sm-4">
            {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'} }) }}
        </div>
         <div class="col-xs-12 col-sm-5">
            <span style="color:red">{{ form_errors(form.plainPassword.second) }}</span>
        </div>
    </div>
    <div class="form-group">

            <label class="col-xs-12 col-sm-3 control-label">Téléphone 1</label>
            <div class="col-xs-12 col-sm-4">
                {{ form_widget(form.telephone1,{'attr':{'class':'form-control'} }) }}
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group">

            <label class="col-xs-12 col-sm-3 control-label">Téléphone 2</label>
            <div class="col-xs-12 col-sm-4">
                {{ form_widget(form.telephone2,{'attr':{'class':'form-control'} }) }}
                <div class="help-block with-errors"></div>
            </div>
        </div>
         
         <div class="form-group">

            <label class="col-xs-12 col-sm-3 control-label">Photo</label>
           <div class="col-xs-12  col-sm-8 dropzone" id="dropzone" style='width:30%'>

            </div>
        </div>

        
             <div class="form-group">
        <div class="col-xs-12 col-sm-offset-3">
            <input type="submit" class="btn rTCGreen" value='{{'registration.submit'|trans}}'/>
        </div>

    </div>  
  {{ form_end(form) }}
