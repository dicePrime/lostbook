<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content = "IE-edge">
        <meta name="viewport" content = "width=device-width, initial-scale=1">
        <meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <title>{% block titre %}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/dropzone.css') }}" />
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}

    </head>
    <body>
        {% block entete %}
            {{ include('::commonsFiles/navbar.html.twig') }}
            {{ include('::commonsFiles/header.html.twig') }}
        {% endblock %}
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-xs-12 col-sm-offset-1 col-sm-7">
                    <div class="row-fluid">
                        <div class="col-xs-12 col-sm-12">
                                <ol class="breadcrumb">
                                    {% block location %}

                                    {% endblock %}
                                </ol>
                            
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="col-xs-12 col-sm-12">
                            {% block section %}
                            {% endblock %}
                        </div> 
                       
                        
                    </div>
                    
                </div>
                        <div class="col-xs-12 col-sm-3">
                          
                            {% block rightMenu %}

                            {% endblock %}
                       </div>       
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-offset-1 col-sm-7">
                    {% block news %}

                    {% endblock %}
                </div>
            </div>

            <div class="row">
                <footer id="footer" class="rTCTopElement">
                    {% block footer %}
                        {{ include('::commonsFiles/footer.html.twig') }}
                    {% endblock %}
                </footer>
            </div>
        </div>     
        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.10.0.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.js') }}"></script>
        {% endblock %}


    </body>
</html>
